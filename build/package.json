{
    "name": "@pyrodata/editor",
    "version": "1.0.0-beta.6",
    "main": "./dist/editor.mjs",
    "type": "module",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./dist/components": {
            "import": "./dist/components/index.js",
            "types": "./dist/components/index.d.ts"
        },
        "./dist/components/buttons": {
            "import": "./dist/components/buttons/index.js",
            "types": "./dist/components/buttons/index.d.ts"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "dev": "vite --host",
        "build": "rimraf build/**/* && tsc && vite build && dts-bundle-generator --config ./dts-bundle-generator.config.ts && copyfiles ./package.json ./README.md build",
        "test": "tsc",
        "test:coverage": "vitest --coverage",
        "lint:scripts": "eslint . --ext .ts",
        "lint:styles": "stylelint ./**/*.{css,scss}",
        "format:scripts": "prettier . --write",
        "format:styles": "stylelint ./**/*.{css,scss} --fix",
        "docs:dev": "vitepress dev ./docs",
        "docs:build": "vitepress build",
        "docs:preview": "vitepress preview"
    },
    "devDependencies": {
        "@tailwindcss/typography": "^0.5.13",
        "@types/jsdom": "^21.1.7",
        "@types/node": "^20.14.10",
        "autoprefixer": "^10.4.19",
        "copyfiles": "^2.4.1",
        "dts-bundle-generator": "^9.5.1",
        "glob": "^11.0.0",
        "postcss": "^8.4.39",
        "rimraf": "^5.0.9",
        "tailwindcss": "^3.4.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.3",
        "vite": "^5.3.3",
        "vite-plugin-dts": "^3.9.1",
        "vitepress": "^1.3.0",
        "vitest": "^1.6.0"
    },
    "dependencies": {
        "@floating-ui/dom": "^1.6.7",
        "@tiptap/core": "^2.4.0",
        "@tiptap/extension-heading": "^2.4.0",
        "@tiptap/extension-image": "^2.4.0",
        "@tiptap/extension-link": "^2.4.0",
        "@tiptap/extension-table": "^2.4.0",
        "@tiptap/extension-table-cell": "^2.4.0",
        "@tiptap/extension-table-header": "^2.4.0",
        "@tiptap/extension-table-row": "^2.4.0",
        "@tiptap/extension-underline": "^2.4.0",
        "@tiptap/pm": "^2.4.0",
        "@tiptap/starter-kit": "^2.4.0",
        "lit": "^3.1.4",
        "lit-html": "^3.1.4",
        "lucide": "^0.400.0"
    }
}